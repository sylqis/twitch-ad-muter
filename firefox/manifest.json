{
    "manifest_version": 2,
    "name": "Twitch Ad Muter",
    "version": "1.00",
    "description": "Mutes Twitch tabs when ads roll",

    "permissions": [ 
        "*://*.twitch.tv/*",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],

    "icons": {
        "48": "images/pop_mute_48.png",
        "96": "images/pop_mute_96.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "page_action": {
        "default_icon": {
          "19": "images/pop_mute_19.png",
          "38": "images/pop_mute_38.png"
        },
        "default_popup": "popup/popup.html",
        "default_title": "Twitch Ad Muter",
        "show_matches": ["*://*.twitch.tv/*"]
    }
}